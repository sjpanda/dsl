<?xml version="1.0" encoding="ASCII"?>
<webapp:WebApp
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:webapp="http://webapp/1.0"
    xsi:schemaLocation="http://webapp/1.0 ../model/WebApp.ecore"
    name="Multiplication Calculator"
    framework="jsf">
  <appConfig/>
  <webConfig
      displayName="Multiplication Calculator"/>
  <library/>
  <view>
    <page properties="//@resource/@propertie.0"
        name="LoginView">
      <instruction
          xsi:type="webapp:Form">
        <tag
            xsi:type="webapp:Input"
            label="//@resource/@propertie.0/@mapping.0"
            textValue="//@model/@businessObject.0/@field.0"
            validator="//@controller/@validator.0"/>
        <tag
            xsi:type="webapp:Input"
            label="//@resource/@propertie.0/@mapping.1"
            textValue="//@model/@businessObject.0/@field.1"/>
        <tag
            xsi:type="webapp:Input"
            type="BUTTON"
            action="//@controller/@action.0"
            buttonValue="//@resource/@propertie.0/@mapping.2"/>
        <tag
            xsi:type="webapp:Messages"/>
      </instruction>
    </page>
    <page properties="//@resource/@propertie.0"
        name="Trainer">
      <instruction
          xsi:type="webapp:Form">
        <tag
            xsi:type="webapp:Input"
            label="//@resource/@propertie.0/@mapping.4"
            textValue="//@model/@businessObject.1/@field.0"/>
        <tag
            xsi:type="webapp:Input"
            property=""
            label="//@resource/@propertie.0/@mapping.5"
            textValue="//@model/@businessObject.1/@field.1"/>
        <tag
            xsi:type="webapp:Input"
            type="BUTTON"
            action="//@controller/@action.1"
            buttonValue="//@resource/@propertie.0/@mapping.6"/>
        <tag
            xsi:type="webapp:Input"
            type="BUTTON"
            action="//@controller/@action.2"
            buttonValue="//@resource/@propertie.0/@mapping.8"/>
        <tag
            xsi:type="webapp:Messages"/>
      </instruction>
      <instruction
          xsi:type="webapp:Input"
          label="//@resource/@propertie.0/@mapping.9"
          textValue="//@model/@businessObject.1/@field.2"/>
    </page>
    <page name="FailedLogin">
      <instruction
          xsi:type="webapp:Text"
          content="Failed Login"/>
    </page>
    <navigation
        message="success"
        from="//@view/@page.0"
        to="//@view/@page.1"/>
    <navigation
        message="failed"
        from="//@view/@page.0"
        to="//@view/@page.2"/>
  </view>
  <model databaseName="jsf"
      url="localhost:3306"
      userName="root">
    <table name="users"
        charset="UTF8">
      <column
          name="id"/>
      <column
          name="login"
          size="255"
          type="VARCHAR"/>
      <column
          name="password"
          size="255"
          type="VARCHAR"/>
      <constraint>
        <primaryKey
            column="//@model/@table.0/@column.0"/>
        <unique
            column="//@model/@table.0/@column.1"/>
      </constraint>
    </table>
    <businessObject
        name="User"
        action="//@controller/@action.0"
        package="de.vogella.jsf.starter.model"
        model="//@model">
      <field
          name="name"
          type="String"
          businessObject="//@model/@businessObject.0"/>
      <field
          name="password"
          type="String"
          businessObject="//@model/@businessObject.0"/>
    </businessObject>
    <businessObject
        name="Card"
        action="//@controller/@action.1 //@controller/@action.2"
        package="de.vogella.jsf.starter.model"
        model="//@model">
      <field
          name="leftside"
          type="int"
          defaultValue=""
          businessObject="//@model/@businessObject.1"/>
      <field
          name="rightside"
          type="int"
          defaultValue=""
          businessObject="//@model/@businessObject.1"/>
      <field
          name="result"
          type="int"
          defaultValue="0"
          businessObject="//@model/@businessObject.1"/>
    </businessObject>
  </model>
  <controller>
    <validator
        name="LoginValidator"
        package="de.vogella.jsf.starter.validator"/>
    <action
        name="login"
        businessObject="//@model/@businessObject.0"
        returnType="String"/>
    <action
        name="show"
        businessObject="//@model/@businessObject.1"
        returnType="String"/>
    <action
        name="clear"
        businessObject="//@model/@businessObject.1"
        returnType="String"/>
  </controller>
  <resource>
    <propertie
        name="messages"
        package="de.vogella.jsf.starter">
      <mapping
          left="user"
          right="User"/>
      <mapping
          left="password"
          right="Password"/>
      <mapping
          left="login"
          right="Login"/>
      <mapping
          left="hello"
          right="Moin"/>
      <mapping
          left="left"
          right="Left Side"/>
      <mapping
          left="right"
          right="Right Side"/>
      <mapping
          left="show"
          right="Show Result"/>
      <mapping
          left="next"
          right="New Test"/>
      <mapping
          left="reset"
          right="Reset"/>
      <mapping
          left="result"
          right="Result"/>
    </propertie>
  </resource>
</webapp:WebApp>
