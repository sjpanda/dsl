	
<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	
	<form-beans>
		<form-bean name="addContact" type="org.lip6.struts.addContact"/>

	</form-beans>
	<action-mappings>
		<action path="/contactCreation" type="org.lip6.struts.servletAction.AddContactAction" name="addContact" scope="request" input="">
			<forward name="success" path="/pages/success.jsp" />
			<forward name="error" path="/pages/error.jsp" />
		</action>
		<action path="/Ajout contact" forward="/pages/ajout contact.jsp" />
	</action-mappings>

<!-- ========== Ressources de definitions de messages =========================== -->
	
	<message-resources parameter="Resources" />

</struts-config>